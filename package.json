{
  "name": "@mvsde/website",
  "private": true,
  "scripts": {
    "clean": "rm --recursive --force dist",
    "dev:site": "NODE_ENV=development eleventy --input content --output dist --serve",
    "dev:js": "esbuild src/main.js --bundle --sourcemap --watch --outfile=dist/scripts.js",
    "dev:css": "postcss src/main.css --watch --env development --output dist/styles.css",
    "build": "npm run clean && npm run build:site && npm run build:js && npm run build:css",
    "build:site": "NODE_ENV=production eleventy --input content --output dist --quiet",
    "build:js": "esbuild src/main.js --bundle --sourcemap --minify --outfile=dist/scripts.js",
    "build:css": "postcss src/main.css --env production --output dist/styles.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.css\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/website"
  },
  "author": "Fynn Becker <post@fynn.be>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mvsde/website/issues"
  },
  "homepage": "https://fynn.be",
  "engines": {
    "node": ">=17"
  },
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^4.5.2",
    "@fontsource/ibm-plex-sans": "^4.5.2",
    "@fontsource/merriweather": "^4.5.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@pangolinjs/eslint-config": "^5.3.1",
    "@pangolinjs/stylelint-config": "^3.0.0",
    "cssnano": "^5.0.16",
    "esbuild": "^0.14.14",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "stylelint": "^14.3.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0"
  }
}
