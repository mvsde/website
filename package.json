{
  "name": "@mvsde/website",
  "private": true,
  "scripts": {
    "dev:site": "NODE_ENV=development URL=http://localhost:8080 eleventy --incremental --serve",
    "dev:js": "esbuild $npm_package_config_js --watch",
    "dev:css": "postcss $npm_package_config_css --watch --env development",
    "build": "npm run build:site && npm run build:js && npm run build:css",
    "build:site": "NODE_ENV=production eleventy",
    "build:js": "esbuild $npm_package_config_js --minify",
    "build:css": "postcss $npm_package_config_css --env production",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"**/*.{js,vue}\"",
    "lint:css": "stylelint \"**/*.{css,vue}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/website"
  },
  "author": "Fynn Becker <post@fynn.be>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mvsde/website/issues"
  },
  "homepage": "https://fynn.be",
  "engines": {
    "node": ">=17"
  },
  "config": {
    "js": "src/main.js --bundle --sourcemap --outdir=dist",
    "css": "src/main.css src/theme --base src --dir dist"
  },
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^4.5.9",
    "@fontsource/ibm-plex-sans": "^4.5.10",
    "@fontsource/merriweather": "^4.5.11",
    "prism-themes": "^1.9.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.9",
    "@11ty/eleventy-img": "^2.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@11ty/eleventy-plugin-vue": "^1.0.0-canary.8",
    "@pangolinjs/eslint-config": "^6.0.0",
    "@pangolinjs/stylelint-config": "^3.0.1",
    "cssnano": "^5.1.7",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-deflist": "^2.1.0",
    "netlify-plugin-cache": "^1.0.3",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-html": "^1.4.1",
    "postcss-import": "^14.1.0",
    "stylelint": "^14.8.2",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0"
  }
}
