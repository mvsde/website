{
	"name": "@mvsde/website",
	"private": true,
	"scripts": {
		"dev:site": "NODE_ENV=development URL=http://localhost:8080 eleventy --incremental --serve",
		"dev:js": "$npm_package_config_js --watch",
		"dev:css": "$npm_package_config_css --watch --env development",
		"build": "npm run build:site && npm run build:js && npm run build:css",
		"build:site": "NODE_ENV=production eleventy",
		"build:js": "$npm_package_config_js --minify",
		"build:css": "$npm_package_config_css --env production",
		"lint": "npm run lint:js && npm run lint:css && npm run lint:markdown",
		"lint:js": "eslint \"**/*.{js,vue}\"",
		"lint:css": "stylelint \"**/*.{css,vue}\"",
		"lint:markdown": "markdownlint-cli2 \"**/*.md\" \"!node_modules\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mvsde/website.git"
	},
	"author": "Fynn Becker <post@fynn.be>",
	"license": "UNLICENSED",
	"bugs": {
		"email": "post@fynn.be",
		"url": "https://github.com/mvsde/website/issues"
	},
	"homepage": "https://fynn.be",
	"engines": {
		"node": ">=17"
	},
	"config": {
		"js": "esbuild src/main.js --bundle --format=esm --sourcemap --outdir=dist",
		"css": "postcss src/main.css src/theme --base src --dir dist"
	},
	"dependencies": {
		"@fontsource/ibm-plex-mono": "^4.5.13",
		"@fontsource/ibm-plex-sans": "^4.5.13",
		"prism-themes": "^1.9.0"
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.0-beta.3",
		"@11ty/eleventy-img": "^3.0.0",
		"@11ty/eleventy-plugin-rss": "^1.2.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
		"@mvsde/eleventy-plugin-vue": "^0.1.1",
		"@pangolinjs/eslint-config": "^7.0.0",
		"@pangolinjs/stylelint-config": "^4.0.0",
		"cssnano": "^5.1.14",
		"esbuild": "^0.17.5",
		"eslint": "^8.33.0",
		"eslint-plugin-vue": "^9.9.0",
		"markdown-it-attrs": "^4.1.6",
		"markdown-it-bracketed-spans": "^1.0.1",
		"markdown-it-container": "^3.0.0",
		"markdown-it-deflist": "^2.1.0",
		"markdown-it-footnote": "^3.0.3",
		"markdownlint-cli2": "^0.6.0",
		"netlify-plugin-cache": "^1.0.3",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-html": "^1.5.0",
		"postcss-import": "^15.1.0",
		"postcss-url": "^10.1.3",
		"stylelint": "^14.16.1"
	}
}
