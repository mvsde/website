{
  "name": "@mvsde/website",
  "scripts": {
    "dev:site": "eleventy --input content --output dist --serve",
    "dev:css": "postcss src/main.css --watch --env development --output dist/styles.css",
    "build": "npm run build:site && npm run build:css",
    "build:site": "eleventy --input content --output dist --quiet",
    "build:css": "postcss src/main.css --env production --output dist/styles.css",
    "lint": "npm run lint:js && npm run lint:language",
    "lint:js": "eslint \"**/*.js\"",
    "lint:language": "alex content/*.md content/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/website"
  },
  "author": "Fynn Becker <fynn@hey.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mvsde/website/issues"
  },
  "homepage": "https://github.com/mvsde/website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "alex": "^9.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "postcss-cli": "^8.1.0",
    "postcss-import": "^12.0.1"
  }
}
