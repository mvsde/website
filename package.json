{
  "name": "@mvsde/website",
  "scripts": {
    "clean": "rm --recursive --force dist",
    "dev": "npm run clean && (npm run dev:site & npm run dev:css)",
    "dev:site": "NODE_ENV=development eleventy --input content --output dist --serve",
    "dev:css": "postcss src/main.css --watch --env development --output dist/styles.css",
    "build": "npm run clean && npm run build:site && npm run build:css",
    "build:site": "NODE_ENV=production eleventy --input content --output dist --quiet",
    "build:css": "postcss src/main.css --env production --output dist/styles.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.css\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvsde/website"
  },
  "author": "Fynn Becker <post@fynn.be>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mvsde/website/issues"
  },
  "homepage": "https://fynn.be",
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^4.5.1",
    "@fontsource/ibm-plex-sans": "^4.5.1",
    "@fontsource/merriweather": "^4.5.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.2",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@pangolinjs/eslint-config": "^5.3.1",
    "@pangolinjs/stylelint-config": "^3.0.0",
    "cssnano": "^5.0.9",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "stylelint": "^14.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0"
  }
}
