<figure>
	{% if hero.image %}
		{% imageFeed {
			src: hero.image,
			alt: hero.alt
		} %}
	{% endif %}

	{% if hero.iframe %}
		<iframe
			title="{{ hero.title }}"
			src="{{ hero.iframe }}"
			width="1280"
			height="720"
			allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
			allowfullscreen
		></iframe>
	{% endif %}

	{% if hero.caption %}
		<figcaption>
			{{ hero.caption|safe }}
		</figcaption>
	{% endif %}
</figure>
