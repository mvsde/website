<script webc:setup>
	export function getItems($data) {
		return orderCollection({
			collection: $data.collections[$data.collection.name],
			order: $data.collection.order,
		});
	}
</script>

<page webc:nokeep>
	<ol
		slot="after-content"
		class="LayoutGallery-list"
		:reversed="$data.collection.order !== 'ascending'"
	>
