			<a class="LayoutGallery-link" :href="item.url" :aria-label="item.data.title">
				<img
					class="LayoutGallery-image"
					:src="`/../${item.data.hero.image}`"
					:alt="item.data.hero.alt"
					loading="lazy"
					sizes="(width >= 1024px) 230px, (width >= 872px) 25vw, (width >= 656px) 33vw, (width >= 400px) 50vw, 100vw"
