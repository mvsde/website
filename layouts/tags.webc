<page webc:nokeep>
	<ul slot="after-content" class="LayoutTags-list">
		<li webc:for="tag of tags.toSorted()">
			<a class="LayoutTags-link" :href="`/tags/${tag.toLowerCase()}`" @text="tag"></a>
		</li>
	</ul>
</page>

<style>
	@layer layouts {
		.LayoutTags-list {
			display: grid;
			gap: 1.5rem;
			list-style: none;
		}

		.LayoutTags-link {
			font-size: 1.375rem;
			font-weight: 650;
			text-decoration: none;

			&:hover {
				text-decoration: underline;
			}
		}
	}
</style>
