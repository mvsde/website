<!DOCTYPE html>
<html lang="{{ language or "en" }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title + " | " if not is_home }}Fynn Becker</title>
    <meta name="description" content="{{ description }}">

    <link href="/feed.xml" type="application/atom+xml" rel="alternate">

    <link rel="icon" href="/icon/favicon.svg">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="apple-touch-icon" sizes="180x180" href="/icon/apple-touch-icon.png">
    <meta name="theme-color" content="#750ac2" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#27212c" media="(prefers-color-scheme: dark)">

    <meta name="twitter:card" content="{{ social.twitter_card or "summary" }}">
    <meta name="twitter:site" content="@mvsde">
    <meta name="twitter:title" content="{{ (social.title or title) | truncate(70) }}">
    <meta name="twitter:description" content="{{ (social.description or description) | truncate(200) }}">

    <meta property="og:type" content="{{ social.og_type or "website" }}">
    <meta property="og:url" content="{{ base }}{{ page.url }}">
    <meta property="og:title" content="{{ social.title or title }}">
    <meta property="og:description" content="{{ social.description or description }}">
    <meta property="og:locale" content="{{ language or "en" }}">

    {% if social.image %}
      {% set socialImageURL %}{% imageSocial { src: social.image.src } %}{% endset %}

      <meta name="twitter:image" content="{{ base }}{{ socialImageURL }}">
      <meta name="twitter:image:alt" content="{{ social.image.alt | truncate(420) }}">

      <meta property="og:image" content="{{ base }}{{ socialImageURL }}">
    {% endif %}

    <link rel="preload" href="/fonts/merriweather-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/ibm-plex-sans-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin>

    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>

    {% include "header.njk" %}

    <main class="content">

      <h1 class="content__title">
        {% block title %}
          {{ title }}
        {% endblock %}
      </h1>

      <div class="content__wrapper {% if hero %}content__wrapper--hero{% endif %}">
        {% if hero %}
          {% include "hero.njk" %}
        {% endif %}

        <div class="content__inner container">
          {% block content %}
            {{ content | safe }}
          {% endblock %}
        </div>

      </div>

    </main>

    {% include "footer.njk" %}

  </body>
</html>
