{% set subdomain = true %}
{% extends "../default.njk" %}

{% block content %}

  <h2>Random stats</h2>

  <ul>
    <li>
      <strong>{{ stats.count }}</strong> total Tweets
    </li>
    <li>
      <strong>{{ stats.retweets }}</strong> of that are Retweets
    </li>
    <li>
      The <strong>very first tweet</strong> is
      <a href="/status/{{ stats.first.id }}/">{{ stats.first.text | striptags | truncate(40) }}</a>
    </li>
    <li>
      …and the <strong>most recent</strong> is
      <a href="/status/{{ stats.last.id }}/">{{ stats.last.text | striptags | truncate(40) }}</a>
    </li>
  </ul>

  <h2>The Archive</h2>

  <ul>
    <li>
      <a href="/list/">Big dump o’ everything</a>
    </li>
  </ul>

{% endblock %}
